{{#if registrationError}}
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 alert alert-error">
            <h4>Error!</h4>
            <p>I'm sorry, but something went wrong with registration! Please try again later!</p>
        </div>
    </div>
{{/if}}

<div class="row">
    <form class="form-horizontal col-sm-6 col-sm-offset-3">
        <div class="form-group">
            <label class="control-label col-sm-4">Username</label>
            <div class="col-sm-7">
                {{input type="text" value=username class="form-control" placeholder="Username"}}
            </div>

            <div class="col-sm-1">
                {{#if usernameCheckPassed}}
                    <i class="ion-checkmark-circled text-success"></i>
                {{else}}
                    {{#if username}}
                        <i class="ion-close-circled text-danger"></i>
                    {{/if}}
                {{/if}}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4">Email</label>
            <div class="col-sm-7">
                {{input type="email" value=email class="form-control" placeholder="Email"}}
            </div>
        </div>

        <div {{bind-attr class=":form-group passwordsNoMatch:has-error:"}}>
            <label class="control-label col-sm-4">Password</label>
            <div class="col-sm-7">
                {{input type="password" value=password class="form-control" placeholder="Password"}}
            </div>
        </div>

        <div {{bind-attr class=":form-group passwordsNoMatch:has-error:"}}>
            <label class="control-label col-sm-4">Password (repeat)</label>
            <div {{bind-attr class=":col-sm-7 passwordsNoMatch:error"}}>
                {{input type="password" value=passwordRepeat class="form-control" placeholder="Password (repeat)"}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-4">
                <button class="btn btn-primary" {{bind-attr disabled=formNotComplete}}>Register</button>
            </div>
        </div>
    </form>
</div>
