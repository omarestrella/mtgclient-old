<div class="row">
    <form class="form-horizontal col-sm-12">
        <div class="form-group">
            <label class="control-label col-sm-4">Deck name</label>
            <div class="col-sm-8">
                {{input value=content.name class="form-control" placeholder="Name"}}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4">Private?</label>
            <div class="col-sm-8">
                {{input type="checkbox" value=content.private class="form-control"}}
            </div>
        </div>
    </form>
</div>
