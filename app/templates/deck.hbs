<div class="row">
    <div {{bind-attr class="editMode:hidden:col-sm-3 :list-group"}}>
        {{#each deck in content}}
            {{#link-to "deck.detail" deck.id classNames="list-group-item"}}
                {{deck.title}}
            {{/link-to}}
        {{/each}}
    </div>

    <div {{bind-attr class="editMode:col-sm-12:col-sm-9"}}>
        {{outlet}}
    </div>
</div>
